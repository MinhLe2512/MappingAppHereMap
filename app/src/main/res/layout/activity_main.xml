<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <fragment
        android:id="@+id/map_container"
        android:name="com.example.heremappingapp.fragment.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layout_search_res"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="4dp"
        android:background="@drawable/border_app_bar"
        android:layout_margin="@dimen/spacing_normal"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_search_res"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:drawableStartCompat="@drawable/ic_location"
            android:text="@string/search_hint"
            android:textSize="@dimen/font_normal"
            android:drawablePadding="@dimen/spacing_small"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_location_searching"
        app:tint="@android:color/holo_red_light" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/elevation_frag_cont" />
</RelativeLayout>