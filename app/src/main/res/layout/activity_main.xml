<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <fragment
        android:id="@+id/map_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/navigation_graph" />

        <EditText
            android:id="@+id/edt_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:background="@drawable/border_app_bar"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="@dimen/spacing_normal"
            android:elevation="@dimen/elevation_edt_txt"
            android:hint="@string/search_hint"
            android:padding="@dimen/spacing_small"
            android:textSize="@dimen/font_normal" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bot_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map_container"
        android:background="@android:color/holo_orange_light"
        app:menu="@menu/menu_bot_nav" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/elevation_frag_cont" />
</RelativeLayout>